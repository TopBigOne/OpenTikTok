<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogoActivity">


    <Button
        android:id="@+id/btn_start_work"
        android:layout_width="261dp"
        android:layout_height="120dp"
        android:layout_marginTop="60dp"
        android:text="@string/startwork"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_take_video"
        android:layout_width="261dp"
        android:layout_height="120dp"
        android:layout_marginTop="60dp"
        android:text="@string/takevideo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_work" />

    <Button
        android:id="@+id/btn_record_screen"
        android:layout_width="261dp"
        android:layout_height="120dp"
        android:layout_marginTop="60dp"
        android:text="@string/record_screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_take_video" />

</androidx.constraintlayout.widget.ConstraintLayout>